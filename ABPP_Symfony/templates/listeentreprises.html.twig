{% include 'header.html.twig' %}

<link rel="stylesheet" href="{{ asset('css/Tableau.css') }}">

{{ form(formulaireSearch) }}

<table border="3">
  <thead>
    <tr>
      <th>Entreprise</th>
      <th>Adresse</th>
      <th>Ville</th>
      {% if app.session.get('userRole') == 'Administrateur' %}
        <th>Supprimer</th>
        <th>Modifier</th>
      {% endif %}
      
    </tr>
  </thead>
  <tbody>
    {% for listeentreprises in listeentreprises %}
      <tr>
        
        <td><a href="{{ path('DetailEntreprise', {'id': listeentreprises.id }) }}">{{listeentreprises.EntRS}}</a></td>
        <td>{{ listeentreprises.Adresse }}</td>
        <td>{{ listeentreprises.EntVille }}</td>
        {% if app.session.get('userRole') == 'Administrateur' %}
          <td style="text-align: center;"><a href="{{ path('SupprimerEntreprise', {'id': listeentreprises.id }) }}"><img src="{{ asset('images/supprimer.png') }}" width="30" height="30" alt="Supprimer"></a></td>
          <td style="text-align: center;"><a href="{{ path('ModifierEntreprise', {'id': listeentreprises.id }) }}"><img src="{{ asset('images/modifier.png') }}" width="30" height="30" alt="Modifier"></a></td>
        {% endif %}
      </tr>
    {% endfor %}
  </tbody>
</table>


{% if app.session.get('userRole') == 'Administrateur' %}
      <td><a href="{{ path('AjouterEntreprise') }}" style="text-decoration:none;"><button type="button" name="ajoutentreprise">Ajouter une entreprise</button></a></td>
{% endif %}

{% if app.session.get('userRole') == 'Administrateur' %}
      <td><a href="{{ path('listeUtilisateur') }}" style="text-decoration:none;"><button type="button" name="Listeutilisateur">Liste Utilisateurs</button></a></td>
{% endif %}
/

{% for label, messages in app.flashes(['error']) %}
  {% for message in messages %}
    <span>{{ message }}</span>
  {% endfor %}
{% endfor %}


